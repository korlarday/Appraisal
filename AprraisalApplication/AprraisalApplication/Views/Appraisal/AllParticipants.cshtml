@model AprraisalApplication.Models.ViewModels.AppraiseMembersVM

@{
    ViewBag.Title = "All Participants";
}



@section Stylesheet{
    .blacklist {
    background-color: #ffe6e6 !important;
    }

    .hideItem {
    display: none !important;
    }
}

<!-- Hero -->
<div class="bg-body-light">
    <div class="content content-full">
        <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
            <h1 class="flex-sm-fill font-size-h2 font-w400 mt-2 mb-0 mb-sm-2">All Appraisal Participants</h1>
            <nav class="flex-sm-00-auto ml-sm-3" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">Home</li>
                    <li class="breadcrumb-item">HR</li>
                    <li class="breadcrumb-item">Initiated Appraisals</li>
                    <li class="breadcrumb-item active" aria-current="page">All Participants</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- END Hero -->
<!-- Page Content -->
<div class="content">
    <a href="@Url.Content("~/appraisal/initiated-appraisals")" class="btn btn-link"><i class="fa fa-arrow-left"></i> Back</a>
    <!-- Elements -->
    <div class="block block-rounded block-bordered">
        <div class="block-header block-header-default">
            <h3 class="block-title">All Appraisal Participants (@Model.NewAppraisal.AppraisalTitle)</h3>
        </div>
        <div class="block-content">
            <div class="block block-rounded block-bordered">
                <div class="block-content block-content-full">
                    <!-- DataTables init on table by adding .js-dataTable-buttons class, functionality is initialized in js/pages/be_tables_datatables.min.js which was auto compiled from _es6/pages/be_tables_datatables.js -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-vcenter js-dataTable-full-pagination" data-page-length='10' id="table">
                            <thead>
                                <tr>
                                    <th class="text-center"></th>
                                    <th>Passport</th>
                                    <th>Employee Name</th>
                                    <th>State</th>
                                    <th>Department</th>
                                    <th>Progress</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="table_body">
                                @{
                                    int num = 1;
                                    foreach (var item in Model.AppraiseeAndProgresses)
                                    {
                                        var imgsrc = String.Empty;
                                        if (item.Employee.PassportImage != null)
                                        {
                                            var imgbase64 = Convert.ToBase64String(item.Employee.PassportImage);
                                            imgsrc = string.Format("data:image/jpg;base64,{0}", imgbase64);
                                        }
                                        <tr class="@(item.Employee.AccountDisabled ? "blacklist": "")">
                                            <td class="text-center">@num</td>
                                            <td class="text-center">
                                                @if (imgsrc != String.Empty)
                                                {
                                                    <img class="img-avatar img-avatar48" src="@imgsrc" alt="Employee Photo">
                                                }
                                                else
                                                {
                                                    <img class="img-avatar img-avatar48" src="~/Images/avatar10.jpg" />
                                                }
                                            </td>
                                            <td>
                                                @item.Employee.Firstname @item.Employee.Lastname
                                            </td>
                                            <td class="state">
                                                @item.Employee.State.Description
                                            </td>
                                            <td class="state">
                                                @item.Employee.Department.Name
                                            </td>
                                            <td>
                                                @if (item.AppraiseeProgress == null)
                                                {
                                                    <div class="text-danger" style="margin:auto">Not yet Started</div>
                                                }
                                                else if (item.AppraiseeProgress.HODSubmit && !item.AppraiseeProgress.HRSubmit)
                                                {
                                                    <a href="@Url.Content("~/appraisal/hr-comments?slug=" + item.Employee.ApplicationUserId + "&n=" + Model.NewAppraisal.Slug + "&a=t")" class="btn btn-primary btn-sm" style="display:block;margin:10px auto">Enter Comments</a>
                                                }
                                                else if (!item.AppraiseeProgress.HODSubmit && item.AppraiseeProgress.HRReject)
                                                {
                                                    <div class="text-danger" style="margin:auto">Rejected to HOD for corrections</div>
                                                }
                                                else if (!item.AppraiseeProgress.HODSubmit)
                                                {
                                                    <div class="text-success" style="margin:auto">In progress</div>
                                                }
                                                else if (item.AppraiseeProgress.HRSubmit && !item.AppraiseeProgress.MDAcknowledgement)
                                                {
                                                    <div class="text-success" style="margin:auto">Submitted to MD</div>
                                                }
                                                else if (item.AppraiseeProgress.MDAcknowledgement)
                                                {
                                                    <div class="text-success" style="margin:auto">Completed</div>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (item.AppraiseeProgress != null)
                                                {
                                                    if (item.AppraiseeProgress.SupervisorSubmit)
                                                    {
                                                        <div class="text-center">
                                                            <div>
                                                                <a href="@Url.Content("~/appraisal/view-appraisal-pdf?u=" + item.Employee.ApplicationUserId + "&s=" + Model.NewAppraisal.Slug)" target="_blank" class="btn btn-link"> <i class="fa fa-file-pdf"></i> View pdf</a>
                                                            </div>
                                                        </div>
                                                    }
                                                }
                                            </td>
                                        </tr>
                                        ++num;
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END Elements -->
</div>
<!-- END Page Content -->
